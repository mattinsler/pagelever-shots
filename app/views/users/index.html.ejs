<section>
  <div class="page-header">
    <h1>Users</h1>
  </div>

  <div class="row">
    <div class="span12">
      <%- link_to('Register', '/users/new') %>
      
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>PageLever ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Shots Taken</th>
            <th>Shots Received</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
            <tr>
              <td><%- link_to(user.pagelever_id, '/users/' + user._id) %></td>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.shots_taken %></td>
              <td><%= user.shots_received %></td>
              <td>
                <form action="/shots" method="POST">
                  <input type="hidden" name="user_id" value="<%= user._id %>">
                  <button type="submit" class="btn">Send Shot</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
