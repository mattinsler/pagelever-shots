<section>
  <div class="page-header">
    <h1>Shots</h1>
  </div>

  <div class="row">
    <div class="span12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>User</th>
            <th>Received At</th>
            <th>Taken At</th>
          </tr>
        </thead>
        <tbody>
          <% shots.forEach(function(shot) { %>
            <tr>
              <td><%- link_to(shot.user.email, '/users/' + shot.user.id) %></td>
              <td><%= moment(shot.received_at).format('MM/DD/YYYY hh:mm:ss') %></td>
              <td>
                <% if (shot.taken_at) { %>
                  <%= moment(shot.taken_at).format('MM/DD/YYYY hh:mm:ss') %></td>
                <% } else { %>
                  Not taken yet
                <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
